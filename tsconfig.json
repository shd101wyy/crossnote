{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES2020",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "rootDir": ".",
    "declaration": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "incremental": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out/types/",
    "resolveJsonModule": true,
    "allowJs": true
    // "declarationMap": true
    // "outFile": "./out/types/index.d.ts"
    //     "strict": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": [
    "node_modules",
    "out",
    "build.js",
    "gulpfile.js",
    "tailwind.config.js"
  ]
}
